---
import BaseLayout from '../components/layout/BaseLayout.astro';

const baseUrl = import.meta.env.BASE_URL;

const chapters = [
  { slug: 'preface', title: 'Preface — The Awakening Player', completed: true },
  { slug: 'chapter-01', title: 'Chapter 1: The Age of Unconscious Systems', completed: true },
  { slug: 'chapter-02', title: 'Chapter 2: The Physics of Time Violence', completed: true },
  { slug: 'chapter-03', title: 'Chapter 3: Conscious Speed — The Human Multiplier', completed: true },
  { slug: 'chapter-04', title: 'Chapter 4: The Death of Academic Competition', completed: true },
  { slug: 'chapter-05', title: 'Chapter 5: The Renaissance Will Be Televised', completed: true },
  { slug: 'chapter-06', title: 'Chapter 6: The Age of Hypergames', completed: true },
  { slug: 'chapter-07', title: 'Chapter 7: Earned Complexity and the Violence of Time', completed: true },
  { slug: 'chapter-08', title: 'Chapter 8: The League Model — Conscious Systems in Practice', completed: true },
  { slug: 'chapter-09', title: 'Chapter 9: Conscious Civilization', completed: true },
  { slug: 'epilogue', title: 'Epilogue: The Game of Staying Awake', completed: true },
];
---

<BaseLayout title="Chapters" description="All chapters of The Conscious League's Rulebook">
  <div class="content">
    <h1>Chapters</h1>
    
    <ul style="list-style: none; margin: var(--spacing-lg) 0;">
      {chapters.map((chapter) => (
        <li style="margin: var(--spacing-md) 0; padding: var(--spacing-md); background-color: #f9f9f9; border-left: 3px solid var(--league-blue); border-radius: 3px;">
          <a href={`${baseUrl}chapters/${chapter.slug}`} style="font-size: 1.1em; font-weight: 500;">
            {chapter.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</BaseLayout>

